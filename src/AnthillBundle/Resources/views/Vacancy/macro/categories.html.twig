{#
    Renders formatted vacancy categories.

    {
        vacancy                 // vacancy entity
        routeListByCategories   // route to the list by category action
    }
#}

{% macro categories(vacancy, routeListByCategories) %}
    {% for category in vacancy.categories %}
        {% spaceless %}
        <a href="{{ path(routeListByCategories, {'categoryName': category.name}) }}">
            <div class="badge badge-info">
                {{ category.name }}
            </div>
        </a>
        {% endspaceless %}
    {% else %}
        <span class="font-italic">
            {{ 'no_categories_assigned'|trans }}
        </span>
    {% endfor %}
{% endmacro categories %}
